<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/button_providers_new_event"
        android:text="@string/button_providers_new_event_text"
        android:layout_width="170dp"
        android:layout_height="96dp"
        android:layout_marginTop="256dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_providers_new_contact"
        android:text="@string/button_providers_new_contact_text"
        android:layout_width="170dp"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_providers_new_event"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>