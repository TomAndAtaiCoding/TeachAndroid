<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".conversation.ConversationBoxActivity">

    <Button
        android:id="@+id/button_submit_conversation"
        android:layout_width="151dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:text="@string/button_conv_update_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text" />

    <TextView
        android:id="@+id/text_output"
        android:layout_width="277dp"
        android:layout_height="125dp"
        android:layout_marginTop="84dp"
        android:text="@string/text_conv_output_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_submit_conversation" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="277dp"
        android:layout_height="125dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edit_conv_input_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no" />


</androidx.constraintlayout.widget.ConstraintLayout>