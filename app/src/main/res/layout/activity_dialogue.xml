<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_dialogue_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/button_dialogue_alert_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_dialogue_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="24dp"
        android:text="@string/button_dialogue_date_text"
        app:layout_constraintStart_toStartOf="@id/button_dialogue_alert"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_dialogue_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/button_dialogue_time_text"
        app:layout_constraintStart_toStartOf="@id/button_dialogue_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_dialogue_info"
        android:text="@string/text_dialogue_info_text"
        android:textSize="18sp"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_dialogue_alert" />

    <TextView
        android:id="@+id/text_dialogue_output"
        android:text="@string/text_dialogue_output_text"
        android:textSize="18sp"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/button_dialogue_alert"
        app:layout_constraintStart_toEndOf="@id/text_dialogue_info" />
</androidx.constraintlayout.widget.ConstraintLayout>